;STORE THE VALUE OF N
MVI E,6

;STORE THE DATAS TO THE MEMORY LOCATION
MVI A,1
STA 0000H
MVI A,2
STA 0001H
MVI A,3
STA 0002H
MVI A,4
STA 0003H
MVI A,5
STA 0004H
MVI A,6
STA 0005H
MVI A,00H

;ADDITION
LXI B,0000H
LOOP:	LDAX B ;FETCH CONTENT OF THE ADDRESS STORED IN D
	ADD D ;TO STORE THE RESULTANT SUM.. IT'S INITIALLY ZERO
	MOV D,A
	INX B
	DCR E
	JNZ LOOP
STA 0007H
OUT 01H
HLT